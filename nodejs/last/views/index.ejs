
<html>
	<head>
		<title></title>
		<style type="text/css">
			table,tr,td {
				border: 1px solid tan;
				border-collapse: collapse;
			}
			td {
				width: 150px;
			}
		</style>
	</head>
	<body>
		
		<a href="/add" target="_blank">添加学生</a>
		
		<table>
			<tr>
				<td>学号</td>
				<td>姓名</td>
				<td>年龄</td>
				<td>性别</td>
				<td colspan="2" style="text-align: center;">操作</td>
			</tr>
			
			<% for( var i=0; i<students.length; ++i ) { %>
				
				<tr>
					
					<td><%= students[i].sid %></td>
					<td><%= students[i].name %></td>
					<td><%= students[i].age %></td>
					<td><%= students[i].sex %></td>
					<td><a href="/edit/<%= students[i].sid%>">修改</a></td>
					<td><a href="/remove/<%= students[i].sid%>">删除</a></td>
					
				</tr>
			
			<%} %>
			
		</table>
		
		
	</body>
</html>
